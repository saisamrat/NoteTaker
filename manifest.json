{
	"manifest_version": 2,

	"name":"TakeNotes",
	"description": "select text and right click and select TakeNotes to add to Notes",
	"version": "1.5.1",

	"background":{
	"scripts": ["start.js"]
	},
	
	"browser_action":{
		"default_icon":"icon.png",
		"default_popup":"index.html"
	},
	"icons" : {
		"128" : "icon.png"
	},

	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

	"permissions":[
		"storage",
		"contextMenus"
	]
}